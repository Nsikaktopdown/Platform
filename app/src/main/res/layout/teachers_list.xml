<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layer1"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_marginBottom="7dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacher_image_list"
            android:layout_width="70dp"
            android:layout_gravity="start"
            android:layout_margin="7dp"
            android:scaleType="fitXY"
            android:layout_height="70dp"
            android:src="@drawable/ic_account_circle_black_24dp"/>
        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#fff"
            android:text="A"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_alignBottom="@+id/teacher_email_list"
            android:layout_alignLeft="@+id/teacher_image_list"
            android:layout_alignStart="@+id/teacher_image_list"
            android:id="@+id/textView" />
        <TextView
            android:textStyle="bold"
            android:textColor="#212121"
            android:textSize="20sp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/teacher_image_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teachers Name"
            android:id="@+id/teacher_name_list"/>
        <TextView
            android:layout_toRightOf="@+id/teacher_image_list"
            android:textSize="13sp"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/teacher_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nsikak Thompson"
            android:id="@+id/teacher_email_list"/>
        <TextView

            android:textSize="13sp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akwa Ibom"
            android:id="@+id/teacher_region"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>