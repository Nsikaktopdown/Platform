<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layer1"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/teacher_image_list"
            android:layout_width="50dp"
            android:layout_gravity="start"
            android:layout_margin="9dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:src="@drawable/circle_2"/>
        <TextView
            android:background="@drawable/circle_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:textColor="#fff"
            android:text="A"
            android:gravity="center"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView3"
            />

        <TextView
            android:textColor="#212121"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teachers Name"
            android:id="@+id/teacher_name_list"/>
        <TextView
            android:layout_toRightOf="@+id/textView3"
            android:textSize="11sp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="3dp"
            android:layout_below="@+id/teacher_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/teacher_email_list"/>
        <TextView
            android:textSize="13sp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akwa Ibom"
            android:id="@+id/teacher_region"
          android:layout_marginRight="7dp"
            android:layout_alignTop="@+id/teacher_email_list"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
<ImageView
    android:visibility="gone"
    android:id="@+id/pop_up"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/ic_more_vert_black_24dp"
    android:layout_alignBottom="@+id/teacher_name_list"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>