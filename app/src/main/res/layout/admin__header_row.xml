<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/circle_4"
          android:scaleType="centerInside"
            android:id="@+id/thumdicon"
         android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_person_add_black_24dp"/>
        <TextView
            android:layout_marginTop="9dp"

            android:textColor="#212121"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@+id/thumdicon"
            android:id="@+id/titleName"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a Teacher"/>
        <TextView
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"

            android:layout_below="@+id/titleName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_toRightOf="@+id/thumdicon"
            android:textColor="#727272"
            android:id="@+id/description"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"

            android:layout_below="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register a new teacher using their credential"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>
    </RelativeLayout>