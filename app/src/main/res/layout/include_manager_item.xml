<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layer1"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/manager_image"
            android:layout_width="70dp"
            android:layout_gravity="start"
            android:layout_margin="7dp"
            android:scaleType="fitXY"
            android:layout_height="70dp"
            app:srcCompat="@drawable/ic_account_circle_black_24dp"/>

        <TextView
            android:background="@drawable/circle_2"
            android:layout_width="60dp"
            android:textStyle="bold"
            android:layout_height="60dp"
            android:textSize="30sp"
            android:textColor="#fff"
            android:text="A"
            android:gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignBottom="@+id/manager_email"
            android:layout_alignLeft="@+id/manager_image"
            android:layout_alignStart="@+id/manager_image"
            android:id="@+id/textView2"
            android:layout_marginEnd="10dp"/>
        <TextView

            android:textStyle="bold"
            android:textColor="#212121"
            android:textSize="20sp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manager_name"/>
        <TextView

            android:layout_toRightOf="@+id/textView2"
            android:textSize="13sp"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/manager_email"/>

        <TextView
            android:layout_marginTop="23dp"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#009688"

            android:id="@+id/manager_type"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>