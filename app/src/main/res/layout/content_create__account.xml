<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#eeeeee"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pies.platform.admin.Create_Account"
    tools:showIn="@layout/activity_create__account">
    <RelativeLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">


                <!-- Name Label -->

                <EditText android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:padding="17dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/edit_two"
                    android:hint="Name"
                    android:layout_marginBottom="7dp"/>



                <EditText android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="17dp"
                    android:background="@drawable/edit_two"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="7dp"
                    android:hint="Email" />



                <EditText android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="17dp"
                    android:background="@drawable/edit_two"
                    android:drawableRight="@drawable/ic_visibility_black_24dp"
                    android:inputType="textPassword"
                    android:hint="Password"/>

                <Spinner
                    android:layout_marginTop="7dp"
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_two"
                    android:layout_height="50dp" />
                <Spinner
                    android:layout_marginTop="7dp"
                    android:id="@+id/spinner1"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_two"
                    android:layout_height="50dp" />
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" android:id="@+id/terms"/>
                    <TextView
                        android:layout_toRightOf="@+id/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7.5dp"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:text="By Clicking Create Account, I Agree to the Terms and Condition of the Organisation "/>
                </RelativeLayout>
                <!-- Signup Button -->
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="37dp"
                    android:padding="12dp"
                    android:textColor="#fff"

                    android:background="@color/colorPrimary"
                    android:text="Create Account"/>



            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>