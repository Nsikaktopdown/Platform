<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pies.platform.Works_Detail"
    tools:showIn="@layout/activity_works__detail">

   <LinearLayout

       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="match_parent">


       <android.support.v7.widget.CardView
           android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
           <TextView
               android:padding="5dp"
               android:textColor="@color/colorAccent"
               android:textSize="20sp"
               android:textStyle="bold"
               android:layout_margin="7dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Homes"/>
               <View
                   android:background="#B6B6B6"
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"/>
          <com.pies.platform.custom.SpinnerContext
               style="@style/spinnerStyle"
               android:id="@+id/spinnerContext"
               android:layout_width="fill_parent"
               android:layout_height="58dp"
               android:padding="20dp"
               android:dropDownSelector="@color/colorAccent"

               android:layout_marginTop="5dp"/>

               <ListView
                   android:visibility="gone"
                   android:padding="5dp"
                   android:scrollbars="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:layout_margin="10dp"
                   android:id="@+id/home_list1">
                   </ListView>
</LinearLayout>
       </android.support.v7.widget.CardView>
       <android.support.v7.widget.CardView
           android:padding="10dp"
           android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <RelativeLayout
               android:padding="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textSize="20sp"
                   android:layout_marginTop="7dp"
                   android:textColor="@color/colorAccent"
                   android:id="@+id/assign"
                   android:paddingBottom="7dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Assigned Homes"/>
               <View
                   android:id="@+id/divider"
                   android:layout_marginTop="2dp"
                   android:layout_below="@+id/assign"
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="#B6B6B6"/>
               <TextView
                   android:textSize="16sp"
                   android:textColor="#727272"
                   android:layout_marginTop="10dp"
                   android:layout_below="@+id/divider"
                   android:id="@+id/home1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Home 1:"/>
               <TextView
                   android:textSize="16sp"
                   android:textColor="#727272"
                   android:layout_marginTop="10dp"
                   android:layout_below="@+id/home1"
                   android:id="@+id/home2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Home 2:"/>
               <TextView
                   android:textSize="16sp"
                   android:textColor="#727272"
                   android:layout_marginTop="10dp"
                   android:layout_below="@+id/home2"
                   android:id="@+id/home3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Home 3:"/>
               <TextView
                   android:textSize="16sp"
                   android:textColor="#727272"
                   android:layout_marginTop="10dp"
                   android:layout_below="@+id/home3"
                   android:id="@+id/home4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Home 4:"/>

               <ImageButton
                   android:layout_marginTop="10dp"
                   android:id="@+id/add_button1"
                   android:layout_width="25dp"
                   android:layout_height="25dp"

                   app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
                   style="?android:attr/borderlessButtonStyle"
                   android:layout_below="@+id/divider"
                   android:layout_alignRight="@+id/divider"
                   android:layout_alignEnd="@+id/divider" />
               <ImageButton
                   android:id="@+id/add_button2"
                   android:layout_width="25dp"
                   android:layout_height="25dp"

                   app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
                   style="?android:attr/borderlessButtonStyle"
                   android:layout_alignTop="@+id/home2"
                   android:layout_alignLeft="@+id/add_button1"
                   android:layout_alignStart="@+id/add_button1" />

               <ImageButton
                   android:id="@+id/add_button3"
                   android:layout_width="25dp"
                   android:layout_height="25dp"

                   app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
                   style="?android:attr/borderlessButtonStyle"
                   android:layout_below="@+id/add_button2"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true" />
               <ImageButton
                   android:id="@+id/add_button4"
                   android:layout_width="25dp"
                   android:layout_height="25dp"

                   app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
                   style="?android:attr/borderlessButtonStyle"
                   android:layout_below="@+id/add_button3"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true" />

           </RelativeLayout>
                 </android.support.v7.widget.CardView>

   </LinearLayout>
</android.support.v4.widget.NestedScrollView>
