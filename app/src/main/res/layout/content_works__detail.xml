<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pies.platform.Works_Detail"
    tools:showIn="@layout/activity_works__detail">

   <LinearLayout

       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="match_parent">
       <android.support.v7.widget.CardView
           android:padding="10dp"
           android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <RelativeLayout
               android:padding="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:textSize="20sp"
                   android:layout_marginTop="15dp"
                   android:textColor="#212121"
                   android:id="@+id/assign"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Assigned Homes"/>
               <View
                   android:id="@+id/divider"
                   android:layout_marginTop="2dp"
                   android:layout_below="@+id/assign"
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="#B6B6B6"/>
               <TextView
                   android:textSize="16sp"
                   android:textColor="#727272"
                   android:layout_marginTop="10dp"
                   android:layout_below="@+id/divider"
                   android:id="@+id/home1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Home 1:"/>
               <TextView
                   android:textSize="16sp"
                   android:textColor="#727272"
                   android:layout_marginTop="10dp"
                   android:layout_below="@+id/home1"
                   android:id="@+id/home2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Home 2:"/>
               <TextView
                   android:textSize="16sp"
                   android:textColor="#727272"
                   android:layout_marginTop="10dp"
                   android:layout_below="@+id/home2"
                   android:id="@+id/home3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Home 3:"/>
               <ImageButton
                   android:layout_marginTop="10dp"
                   android:id="@+id/favorite_button"
                   android:layout_width="25dp"
                   android:layout_height="25dp"

                   app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
                   style="?android:attr/borderlessButtonStyle"
                   android:layout_below="@+id/divider"
                   android:layout_alignRight="@+id/divider"
                   android:layout_alignEnd="@+id/divider" />
               <ImageButton
                   android:id="@+id/add_button2"
                   android:layout_width="25dp"
                   android:layout_height="25dp"

                   app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
                   style="?android:attr/borderlessButtonStyle"
                   android:layout_alignTop="@+id/home2"
                   android:layout_alignLeft="@+id/favorite_button"
                   android:layout_alignStart="@+id/favorite_button" />

               <ImageButton
                   android:id="@+id/add_button3"
                   android:layout_width="25dp"
                   android:layout_height="25dp"

                   app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
                   style="?android:attr/borderlessButtonStyle"
                   android:layout_below="@+id/add_button2"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true" />


           </RelativeLayout>
                 </android.support.v7.widget.CardView>

   </LinearLayout>
</android.support.v4.widget.NestedScrollView>
