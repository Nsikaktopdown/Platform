<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layer1"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layerone"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/teacher_image_list"
            android:layout_width="50dp"
            android:layout_gravity="start"
            android:layout_margin="9dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:src="@drawable/circle_2"/>
        <TextView
            android:background="@drawable/circle_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="A"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView3"
            />

        <TextView
            android:textColor="#212121"
            android:textSize="12sp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teachers Name"
            android:id="@+id/teacher_name_list"/>
        <TextView
            android:layout_toRightOf="@+id/textView3"
            android:textSize="8sp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="3dp"
            android:layout_below="@+id/teacher_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/teacher_email_list"/>
        <TextView

            android:textSize="9sp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00PM"
            android:id="@+id/teacher_time"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="12dp"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#727272"
            android:layout_below="@+id/textView3"/>

        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layer_two"
        android:layout_margin="7dp"
        android:layout_below="@+id/layerone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="4dp"
            android:background="#eeeeee"
            android:textColor="#212121"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Was the tutor in class"
            android:id="@+id/fb1"/>
        <TextView
            android:layout_below="@+id/fb1"
            android:textColor="#009688"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Remark: yes"
            android:id="@+id/rm1"/>

    </RelativeLayout>
        <RelativeLayout
